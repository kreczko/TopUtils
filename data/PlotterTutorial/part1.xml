<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Plotter>
	<!-- define sources -->
    <sources>
    	<!-- makes signal.root available as the alias "sig" -->
        <file id="sig" name="TopAnalysis/TopUtils/test/signal.root" />
    </sources>
    <!-- define plots -->
    <plots>
    	<!-- define a list of canvas' -->
        <canvlist>
        	<!-- defines a histogram source with the name "test". -->
            <hist name="test" source="file:sig" />
            <!-- this will save all histograms in the subfolder "test" -->
            <savefolder>test</savefolder>
        </canvlist>
    </plots>
</Plotter>