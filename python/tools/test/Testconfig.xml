<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!-- rule declaration possible -->
<!-- http://www.devmag.net/xml/xml_schema_elemente_attribute.htm -->
<!-- final steering file -->
<HistPlotter>
	<include file='test/HistConfig.xml' />
<!--	Not needed, since default file is defined in code-->
<!--	<include file='defaultHist.xml' />-->
	<sources>
		<!-- gets input from 1 canvogram -->
		<input name="SemiLepAnalysis">
			<folder name='trackmafter'>
			<!-- only canvogram which name is 'mbg_nVSdisc' -->
				<filter type='exact' value='mbg_nVSdisc' />
<!--				Will be replaced by 'exact' filters in the parser-->
<!--				<filter type='canvfile' value='Muon.canv' />-->
			</folder>
		</input>
		<input name='allMuonPt'>
			<folder name='analyzeAllMuon'>
				<!-- canvograms containing 'pt' but also do not have electron in their name-->
				<!-- no case sensitivity -->
				<filter type='contains' value='pt' />
				<!--  without resolution plot -->
				<filter type='!contains' value='res' />
			</folder>			
		</input>
		<input name='SelectedMuons'>
			<folder name='analyzeSelMuon' />
<!--			to use filters for all folders, use *-->
<!--			<folder name='*' >-->
<!--			<filter type='contains' value='pt' />-->
				  without resolution plot 
<!--				<filter type='!contains' value='res' />-->
<!--			</folder>-->
		</input>

	<!-- includes of the data -->
		<file id='qcd' name='test/background.root' />
		<file id='top' name='test/signal.root' />
		<file id='kin' name='test/analyzeMuon.root' />
	</sources>
	<!--
		makes the canvas, mixes the canvogramms defined in the canvSetup
		summaryFile = ps oder pdf
	-->
	<plots create='eps,pdf' makeSummaryFile='true' summaryFile='inspect.pdf'>
		<canv name='NeventsVSmvadisc' setup='effplot' input='i:SemiLepAnalysis'>
		<!-- name is also used for legend -->
			<hist name='qcd' source='file:qcd'  type='line' style='22' color='23' />
			<hist name='signal' source='file:top'  type='marker' style='23' color='blue' />
<!--			<hist name='combined' source='hist:signal,hist:qcd' operation='add'-->
<!--				style='24' />-->
			<legend name='plotname' posx='20' posy='0' fonsize='12' />
		</canv>
		
		<canv name='mvadisc' setup='effplot' input='trackmafter/mbg_nVSdisc'>
		<!-- name is also used for legend -->
			<titleX v='mva disc.' />
			<titleY v='events' />
			<hist name='qcd' source='file:qcd'  type='line' style='22' color='23' />
			<hist name='signal' source='file:top'  type='marker' style='23' color='blue' />
<!--			<hist name='combined' source='hist:signal,hist:qcd' operation='add'-->
<!--				style='24' />-->
			<legend name='plotname' posx='20' posy='0' fonsize='12' />
		</canv>
		
<!--		<canvlist name='electronKinematic' input='kinematicPlots'>-->
<!--			<hist name='qcd' source='file:qcd'  type='line' style='22' color='23' />-->
<!--			<hist name='signal' source='file:top'  type='marker' style='23' color='blue' />-->
<!--		</canvlist>-->
		
		<canvlist name='AllHistos'>
			<hist name='qcd' source='file:qcd' type='marker' style='22' color='23' />
			<hist name='signal' source='file:top'   type='marker'  style='23' color='blue' />
		</canvlist>
	</plots>
</HistPlotter>