<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
	<!-- rule declaration possible -->
	<!-- http://www.devmag.net/xml/xml_schema_elemente_attribute.htm -->
	<!-- final steering file -->
<HistPlotter>
	<sources>
		<!-- gets input from 1 histogram -->
		<input name='qcdAll'>
			<folder name="qcd/jetcut_20/all" />
		</input>
		<input name='topAll'>
			<folder name="top/jetcut_20/all" />
		</input>
		<input name='wjetsAll'>
			<folder name="wjets/jetcut_20/all" />
		</input>
		<input name='mixedAll'>
			<folder name="mixed/jetcut_20/all" />
		</input>
		
		<input name='qcdTrk'>
			<folder name="qcd/jetcut_20/track" />
		</input>
		<input name='topTrk'>
			<folder name="top/jetcut_20/track" />
		</input>
		<input name='wjetsTrk'>
			<folder name="wjets/jetcut_20/track" />
		</input>
		<input name='mixedTrk'>
			<folder name="mixed/jetcut_20/track" />
		</input>
		
		<input name='appQCD'>
			<folder name="applied/jetcut_20/all/bkg" />
		</input>
		
		<input name='test'>
		<folder name='applied/Jcuts' />
		</input>
		<input name='appSIG'>
			<folder name="applied/jetcut_20/all/sig" />
		</input>
		<input name='appQCD25'>
			<folder name="applied/jetcut_25/all/bkg" />
		</input>
		<input name='appSIG25'>
			<folder name="applied/jetcut_25/all/sig" />
		</input>
		<input name='appQCD30'>
			<folder name="applied/jetcut_30/all/bkg" />
		</input>
		<input name='appSIG30'>
			<folder name="applied/jetcut_30/all/sig" />
		</input>
		<input name='appQCD35'>
			<folder name="applied/jetcut_35/all/bkg" />
		</input>
		<input name='appSIG35'>
			<folder name="applied/jetcut_35/all/sig" />
		</input>
		<input name='appQCD40'>
			<folder name="applied/jetcut_40/all/bkg" />
		</input>
		<input name='appSIG40'>
			<folder name="applied/jetcut_40/all/sig" />
		</input>

		<!-- includes of the data -->
		<file id="macro" name="{$macro}" />
	</sources>
	<!--
		makes the canvas, mixes the histogramms defined in the histSetup summaryFile
		= ps oder pdf
	-->
	<plots create='png' makeSummaryFile='true' summaryFile='inspect.pdf'>
	<!-- Macro plots -->
	<hist name='quality_QCDLoose' input='quality_loose' >
		<var name='QCD(#mu enriched)' source='file:macro, input:appQCD'  color='2' />
		<titleX v='MET cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
		<legend posX='20'  posY="0" sizeX="55"/>
		<maxY v='1.012' />
		<minY v='1.008' />	
	</hist>
	<hist name='quality_SIGLoose' input='quality_loose' >
		<var name='signal' source='file:macro, input:appSIG'  color='4' />
		<titleX v='MET cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
		<legend  posY="70"/>
		<maxY v='0.2' />
		<minY v='-0.1' />		
	</hist>
	<hist name='quality_QCDTight' input='quality_tight' >
		<var name='qcd' source='file:macro, input:appQCD'  color='2' />
		<titleX v='MET cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
<!--		<legend  posX='50' />-->
		<maxY v='1.43' />
		<minY v='1.32' />		
	</hist>
	<hist name='quality_SIGTight' input='quality_tight' >
		<!-- name is also used for legend -->
		<var name='signal' source='file:macro, input:appSIG'  color='4' />
		<titleX v='MET cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
<!--		<legend  />-->
		<maxY v='0.2' />
		<minY v='-0.1' />		
	</hist>
	<hist name='masterPlotAll' input='efficiency' >
		<var name='QCD(#mu enriched)' source='file:macro, input:qcdAll'  color='2' />
		<var name='top-signal' source='file:macro, input:topAll'  color='4' />
		<var name='W + jets' source='file:macro, input:wjetsAll'  color='8' />
		<var name='combined' source='file:macro, input:mixedAll'  color='1' />
		<titleX v='MET [GeV]' />
		<titleY v='iso. efficiency' />
		<legend posY="25" posX="20" sizeX="50"/>
	</hist>
	
	<hist name='masterPlotTrk' input='efficiency' >
		<var name='qcd' source='file:macro, input:qcdTrk'  color='2' />
		<var name='top' source='file:macro, input:topTrk'  color='4' />
		<var name='wjets' source='file:macro, input:wjetsTrk'  color='8' />
		<var name='combined' source='file:macro, input:mixedTrk'  color='3' />
		<titleX v='MET [GeV]' />
		<titleY v='iso. efficiency' />
		<legend posY="60"/>
	</hist>
	
	<hist name='eff_MC_qcd' input='efficiency' >
		<var name='qcd' source='file:macro, input:qcdAll'  color='2' />
		<titleX v='MET cut [GeV]' />
		<titleY v='iso. efficiency' />
		<legend posX='50' />
	</hist>
	<hist name='eff_qcd' input='effvsDiscCut_BG' >
		<var name='qcd' source='file:macro, input:appQCD'  color='2' />
		<titleX v='MET cut [GeV]' />
		<titleY v='iso. efficiency' />
		<max v='0.026' />
		<min v='0.024' />		
		<legend  posX='50' />
	</hist>
	
	<histlist name='quality_cuts_loose' input='test' >
		<var name='qcd loose' source='file:macro'  color='2' />
		<titleX v='jet E_{T} cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
<!--		<max v='1.008' />-->
<!--		<min v='0.997' />-->
		<legend  posX='50' />
	</histlist>
	<!-- Cut plots -->
	<hist name='quality_QCDLoose_cuts' input='quality_loose' >
		<var name='jetCut 20' source='file:macro, input:appQCD' type='marker' color='2' style='20'/>
		<var name='jetCut 25' source='file:macro, input:appQCD25' type='marker' color='4' style='21' />
		<var name='jetCut 30' source='file:macro, input:appQCD30' type='marker' color='6' style='22' />
		<var name='jetCut 35' source='file:macro, input:appQCD35' type='marker' color='8' style='23'/>
		<var name='jetCut 40' source='file:macro, input:appQCD40' type='marker' style='27' />
		<titleX v='MET cut [GeV]' />
		<titleY v='N_{est}/N_{true}' />
		<legend posY='70'/>
	</hist>
	</plots>
</HistPlotter>